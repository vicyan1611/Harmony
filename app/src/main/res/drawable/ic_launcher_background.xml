<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/primary_blurple" />
            <stroke
                android:width="0dp"
                android:color="@color/white" />
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />
            <corners android:radius="10dp" />
            <size
                android:width="52dp"
                android:height="52dp" />
        </shape>
    </item>
</layer-list>